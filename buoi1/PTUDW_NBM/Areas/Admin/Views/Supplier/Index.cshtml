@model IEnumerable<MyClass.Model.Suppliers>

@{
    ViewBag.Title = "Trang chủ nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link rel="stylesheet" href="~/Public/css/jquery.dataTables.min.css" />
}

@section footer {
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}

<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH SÁCH NHÀ CUNG CẤP</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create", "Supplier")" class="btn-sm btn-success">
                                <i class="fa fa-plus"></i>
                                Thêm mới
                            </a>
                            <a href="@Url.Action("Trash", "Supplier")" class="btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                                Thùng rác
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                        <th>#</th>
                        <th>ID</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Order)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        <th>Chức năng</th>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <input type="checkbox" name="checkid" value="" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                   <img src="~/Public/img/supplier/@item.Image" alt="Image" class="img-fluid"/>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Order)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status", "Supplier", new { id = item.Id })" class="btn-sm btn-success">
                                            <i class="fa fa-toggle-on"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status", "Supplier", new { id = item.Id })" class="btn-sm btn-danger">
                                            <i class="fa fa-toggle-off"></i>
                                        </a>
                                    }
                                    <a href="@Url.Action("Edit", "Supplier", new { id = item.Id })" class="btn-sm btn-primary">
                                        <i class="fa fa-edit"></i>
                                        Sửa
                                    </a>
                                    <a href="@Url.Action("Details", "Supplier", new { id = item.Id })" class="btn-sm btn-info">
                                        <i class="fa fa-eye"></i>
                                        Chi tiết
                                    </a>
                                    <a href="@Url.Action("Delete", "Supplier", new { id = item.Id })" class="btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                        Xoá
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
